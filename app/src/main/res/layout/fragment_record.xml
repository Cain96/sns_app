<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/stop_watch_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.ReportFragment">

    <Button
        android:id="@+id/btn_sns"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/buttonbg"
        android:text="Button SNS"
        android:textSize="20sp"
        android:drawableLeft="@drawable/baseline_account_circle_24"
        android:paddingLeft="20dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toTopOf="@id/btn_date" />

    <Button
        android:id="@+id/btn_date"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/buttonbg"
        android:text="Button Date"
        android:textSize="20sp"
        android:drawableLeft="@drawable/baseline_calendar_today_24"
        android:paddingLeft="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btn_time"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/buttonbg"
        android:text="Button Time"
        android:textSize="20sp"
        android:drawableLeft="@drawable/baseline_access_time_24"
        android:paddingLeft="20dp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/btn_date" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:borderWidth="0dp"
        android:backgroundTint="@color/fabBackground"
        android:tint="@color/white"
        android:src="@drawable/baseline_timer_24"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    </android.support.design.widget.FloatingActionButton>

</android.support.constraint.ConstraintLayout>
